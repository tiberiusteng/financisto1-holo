<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:alertDialogTheme">@android:style/Theme.Material.Dialog.Alert</item>
        <item name="android:buttonStyle">@android:style/Widget.Holo.Light.Button</item>
        <item name="android:imageButtonStyle">@android:style/Widget.Holo.Light.ImageButton</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerItem</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="AppDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:alertDialogTheme">@android:style/Theme.Material.Dialog.Alert</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
    </style>
    <style name="AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert" />
    <style name="CalculatorDialog" parent="@android:style/Theme.Holo.Light.Dialog" />
    <style name="MassOpActionDropdown">
        <item name="android:background">@null</item>
    </style>
    <style name="ButtonBar" parent="@android:style/Holo.ButtonBar" />
    <style name="SelectableItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="MoreButton">
        <item name="android:src">@drawable/ic_btn_round_more</item>
    </style>
    <style name="ImageButtonOnDarkBackground" parent="@android:style/Widget.Holo.ImageButton" />
    <style name="WhiteBackgroundButtonBar" parent="@style/ButtonBar">
        <item name="android:background">@android:color/background_light</item>
    </style>
    <style name="LightButton" parent="@android:style/Widget.Holo.Light.Button"></style>
    <style name="DarkButton" parent="@android:style/Widget.Holo.Button"></style>
    <style name="EntityEnumListItemText">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="LockScreenButton" parent="@android:style/Widget.Button" />
    <style name="TextViewSpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="TextViewSpinnerDropDownItemMonospace" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    <style name="TextViewSpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="BottomBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#303030</item>
    </style>

    <style name="LightSpinner" parent="@style/AppTheme">
        <item name="android:spinnerItemStyle">@style/LightSpinnerItem</item>
    </style>

    <style name="LightSpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppThemeCompat" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:alertDialogTheme">@android:style/Theme.Material.Dialog.Alert</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:buttonStyle">@android:style/Widget.Holo.Light.Button</item>
        <item name="android:imageButtonStyle">@android:style/Widget.Holo.Light.ImageButton</item>
    </style>

    <style name="AppDialogCompat" parent="@style/Theme.AppCompat.Dialog">
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>

</resources>